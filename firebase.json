{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "./hosting",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/*tracker*",
        "destination": "/scripts/tracker.js"
      },
      {
        "source": "/collect/*",
        "function": "app"
      },
      {
        "source": "/sessionize",
        "function": "app"
      },
      {
        "source": "/admin-access",
        "function": "app"
      },
      {
        "source": "/user-access",
        "function": "app"
      },
      {
        "source": "/sessionLogin",
        "function": "app"
      }
    ],
    "cleanUrls": true
  }
}
