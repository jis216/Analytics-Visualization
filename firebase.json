{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "./hosting",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/*tracker*",
        "destination": "/scripts/minified-tracker.js"
      },
      {
        "source": "/collect",
        "function": "collect"
      }, 
      {
        "source": "/sessionize",
        "function": "sessionize"
      } 
    ],
    "cleanUrls": true
  }
}
